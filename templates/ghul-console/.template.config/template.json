{
  "$schema": "http://json.schemastore.org/template",
  "author": "degory",
  "classifications": [ "Console" ], 
  "name": "ghūl console application",
  "identity": "degory.ghūl.console",         
  "groupIdentity":"degory.ghūl.console",
  "shortName": "ghul-console",
  "tags": {
    "language": "ghūl",
    "type":"project"
  },
  "sourceName": "ghul-console",
  "preferNameDirectory":true,
  "sources": [
    {
      "modifiers": [
        {
          "exclude": [ ".git/**", "obj/**", "bin/**", ".github/**", ".dependabot/**", ".devcontainer/**", "*.dll", "out.il", ".assemblies.json" ]
        }
      ]
    }
  ],
  "postActions": [
    {
      "actionId": "488e31e6-7937-4587-a952-734126b0dbdf",
      "args": {
        "executable": "dotnet",
        "args": "dotnet tool update ghul.compiler --local"
      },
      "manualInstructions": [
        {
          "text": "Run 'dotnet tool update dotnet tool update ghul.compiler --local' to ensure the latest version of the ghūl compiler is referenced."
        }
      ],
      "continueOnError": true
    }
  ] 
}