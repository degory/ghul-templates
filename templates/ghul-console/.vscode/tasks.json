    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "dotnet",
            "type": "shell",
            "args": [
                "build",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "group": "build",
            "presentation": {
                "reveal": "silent"
            },
            "problemMatcher": ["$msCompile"]
        },
        {
            "label": "generate .assemblies.json",
            "command": "dotnet",
            "type": "shell",
            "args": [
                "build",
                "/target:GenerateAssembliesJson",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "group": "build",
            "presentation": {
                "reveal": "silent"
            },
            "problemMatcher": ["$msCompile"]
        }

    ]
}